<!DOCTYPE html>
<html class="wide wow-animation smoothscroll" lang="en">

<head>
	<!-- Site Title-->
	<title>
		<%= translation.HUB_ACTIVITY_TITLE %>
	</title>
	<!-- Site logo images-->
	<link href="/images/logo.png" rel="icon" type="image/x-icon" />
	<link rel="stylesheet" href="/styles/meeting/meeting.css">
	<!--Stylesheets file links -->
	<% include _layouts/common-header %>
</head>

<body class="h-background-color">
	<!--BEGIN Page activitylist -->
	<% include _layouts/header-with-navigation %>
		<div class="page">
			<!-- page loader -->
			<div id="page-loader">
				<div class="cssload-container">
					<div class="cssload-speeding-wheel"></div>
				</div>
			</div>
			<!-- BEGIN Current Activities toolbar-->
			<div class="container-fluid breadcrumb-container">
				<ol class="breadcrumb">
					<h5 class="meeting-head-bread">
						<%= translation.HUB_ACTIVITY_TOOLBAR_CURRENT_ACTIVITIES %>
					</h5>
					<li>
						<a href="/dashboard" class="breadcrumb-links">
							<%= translation.HUB_SPACES_TOOLBAR_DASHBOARD %>
						</a>
					</li>
					<li>
						<%= translation.HUB_ACTIVITY_TOOLBAR_ACTIVITIES %>
					</li>
				</ol>
			</div>
			<!-- END Current Activities toolbar-->

			<section>
				<div class="shell">
					<!-- BEGIN Activities search head -->
					<div class="col-md-12 col-sm-12 col-md-12 col-xs-12 col-lg-12 padding-left-right-none text-center">
						<!-- Search input field -->
						<div class="form-wrap form-wrap_icon linear-icon-magnifier head-search-w-h">
							<input id="filter-users" class="form-input cursor-auto search-input input-box-shadow" type="text" name="search" placeholder="Search The Meeting">
						</div>
					</div>
					<!-- END Activities search head -->
					<div class="col-md-12 col-sm-12 col-md-12 col-xs-12 col-lg-12 padding-left-right-none text-center">
						<div id="activity-card"></div>
					</div>
					<div class="col-md-12 col-sm-12 col-md-12 col-xs-12 col-lg-12 padding-left-right-none">
						<% include _layouts/cards/activitylist-card %>
							<% include _layouts/modals/activitylist-modal %>
					</div>

					<!-- BEGIN Current Activities -->

					<!-- END Current Activities -->
					<!-- See More -->
					<p style="text-align: right;margin-right: 2%;font-size: 15px;margin-top: 10px;margin-bottom:10px;">
						<a>
							<%= translation.HUB_ACTIVITY_SEE_MORE %>
						</a>
					</p>
				</div>
				<!-- BEGIN Recent Activities Toolbar -->
				<div class="container-fluid breadcrumb-container">
					<ol class="breadcrumb" style="text-align: left">
						<h5>
							<%= translation.HUB_ACTIVITY_TOOLBAR_RECENT_ACTIVITIES %>
						</h5>
					</ol>
				</div>
				<!-- END Recent Activities Toolbar -->
				<!-- BEGIN Recent Activities -->
				<div class="shell">

					<div class="col-md-12 col-sm-12 col-md-12 col-xs-12 col-lg-12 padding-left-right-none text-center">
						<div id="recent-meeting-card"></div>
					</div>
					<div class="col-md-12 col-sm-12 col-md-12 col-xs-12 col-lg-12 padding-left-right-none">
						<% include _layouts/cards/recent-meeting-card %>

					</div>
					<!-- See More -->
					<p style="text-align: right;margin-right: 2%;font-size: 15px;margin-top: 10px;margin-bottom:10px;">
						<a>
							<%= translation.HUB_ACTIVITY_SEE_MORE %>
						</a>
					</p>

				</div>
				<!-- END Recent Activities -->


			</section>
			<!-- BEGIN Template script file links -->
			<% include _layouts/common-scripts %>
				<script src="/scripts/inbuilt/modernizr.custom.js"></script>
				<script src="/scripts/common/general.js"></script>
				<script src="/scripts/spaces/spacelist.js"></script>
				<script src="/scripts/activity/activitylist.js"></script>
				<!--  END Template script file links src -->

				<!-- BEGIN Spaces script -->
				<script src="/scripts/inbuilt/classie.js"></script>
				<script src="/scripts/inbuilt/uiMorphingButton_fixed.js"></script>
				<script>
					$(document).ready(function () {
						$("#activityList").addClass("active");
					});
				</script>
		</div>
		<%include _layouts/footer %>
</body>

</html>